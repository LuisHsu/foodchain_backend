{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "import/prefer-default-export": 0,
        "object-curly-newline": [
            "error",
            {
                "ImportDeclaration": {
                    "multiline": true
                }
            }
        ]
    }
}
